{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "debug",
            "externalConsole": false,
            "program": "${workspaceRoot}/out/c8-dbg",
            "args": [
                "roms/PONG.ch8"
            ],
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug (windows)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "debug",
            "externalConsole": false,
            "program": "${workspaceRoot}/out/c8-dbg.exe",
            "args": [
                "roms/PONG.ch8"
            ],
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
